datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

generator client {
  provider = "prisma-client-js"
}

// Define your models here
model User {
  id          Int      @id @default(autoincrement())
  companyName String
  email       String   @unique
  password    String
}
